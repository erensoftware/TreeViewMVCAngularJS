@using TreeViewMVCAngularJS.Entity
@model IEnumerable<Department>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Department List</h2>

<div class="table-responsive">
    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th>@Html.DisplayNameFor(t => t.DepartmentId)</th>
                <th>@Html.DisplayNameFor(t => t.DepartmentName)</th>
                <th>@Html.DisplayNameFor(t => t.IsActive)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Department item in Model)
            {
                <tr>
                    <td>@item.DepartmentId.ToString()</td>
                    <td>@item.DepartmentName</td>
                    <td>@item.IsActive.ToString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>
